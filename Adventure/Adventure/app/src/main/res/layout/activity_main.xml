<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.cazallau.adventure.MainActivity">

    <ImageView
        android:id="@+id/activity_main_scene_image"
        android:layout_width="match_parent"
        android:scaleX="1.4"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        tools:src="@android:drawable/btn_star"/>

    <TextView
        android:id="@+id/activity_main_scene_text"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        tools:text="Hola Hola"
        android:gravity="center"
        android:textSize="16dp"

        android:layout_below="@id/activity_main_scene_image"/>

    <ImageButton
        android:id="@+id/activity_main_north_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/north"
        android:background="@android:color/transparent"
        android:layout_marginTop="40dp"
        android:layout_below="@id/activity_main_scene_text"
        android:layout_toRightOf="@+id/activity_main_west_button"
        />
    <ImageButton
        android:id="@+id/activity_main_west_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/west"
        android:background="@android:color/transparent"
        android:layout_below="@id/activity_main_north_button"
        android:text="W"/>

    <ImageButton
        android:id="@+id/activity_main_east_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/east"
        android:background="@android:color/transparent"
        android:layout_below="@id/activity_main_north_button"
        android:layout_toRightOf="@+id/activity_main_look_button"
        android:text="E"/>

    <ImageButton
        android:id="@+id/activity_main_south_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/south"
        android:background="@android:color/transparent"
        android:layout_below="@id/activity_main_look_button"
        android:layout_toRightOf="@id/activity_main_west_button"
        android:text="S"/>

    <ImageButton
        android:id="@+id/activity_main_look_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/look"
        android:background="@android:color/transparent"
        android:layout_below="@id/activity_main_north_button"
        android:text="L"
        android:layout_toRightOf="@id/activity_main_west_button"
         />
    <ImageButton
        android:id="@+id/activity_main_inventory_button"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:src="@drawable/inventory"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="50dp"
        android:layout_below="@id/activity_main_scene_text"
        android:layout_toRightOf="@id/activity_main_east_button"/>

    <ImageButton
        android:id="@+id/activity_main_take_button"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:src="@drawable/take"
        android:layout_marginLeft="50dp"
        android:layout_below="@id/activity_main_inventory_button"
        android:layout_toRightOf="@id/activity_main_east_button"/>

    <ImageButton
        android:id="@+id/activity_main_drop_button"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:src="@drawable/drop"
        android:layout_marginLeft="50dp"
        android:layout_below="@id/activity_main_take_button"
        android:layout_toRightOf="@id/activity_main_east_button"/>

    <ImageButton
        android:id="@+id/activity_main_help_button"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:src="@drawable/help"
        android:layout_marginLeft="50dp"
        android:layout_below="@id/activity_main_drop_button"
        android:layout_toRightOf="@id/activity_main_east_button"/>

</RelativeLayout>
